{
    "min_packer_version": "0.12.0",
    "variables": {
      "profile": "default",
      "region": "us-east-1",
      "subnet_id": "subnet-2bf8024d",
      "vpc_id": "vpc-e0687e9a"
    },
 
    "builders": [{
      "type": "amazon-ebs",
      "profile": "{{user `profile`}}",
      "region": "{{user `region`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t3.micro",
      "ssh_username": "ubuntu",
      "ssh_pty": true,
      "ami_name": "JenkinsAgent-{{timestamp}}",
      "run_tags": {
        "Owner": "ns1"
      },
      "tags": {
          "Name": "Ubuntu 20.04 LTS Jenkins Agent",
          "OS": "Ubuntu 20.04 LTS"
      },
      "ebs_optimized": true,
      "launch_block_device_mappings": [{
        "device_name": "/dev/sda1",
        "volume_size": 100,
        "volume_type": "gp2",
        "delete_on_termination": true
      }]
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "config/",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": ["mkdir -p /tmp/postgres"]
        },
        {
            "type": "file",
            "source": "postgres/",
            "destination": "/tmp/postgres"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/aptUpdate.sh",
                "scripts/setsysctls.sh",
                "scripts/setupUser.sh",
                "scripts/installBuildtools.sh",
                "scripts/installPython.sh",
                "scripts/installDocker.sh",
                "scripts/installJava.sh",
                "scripts/installGoTools.sh",
                "scripts/installPostgres.sh",
                "scripts/installJFrog.sh",
                "scripts/installCloudwatch.sh",
                "scripts/cleanup.sh"
            ]
        }
    ]
}
